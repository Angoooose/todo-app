generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id        String   @id @default(cuid())
    email     String   @unique
    password  String
    createdAt DateTime @default(now()) @map(name: "created_at")

    @@map(name: "users")
}

model Task {
    id          String   @id @default(cuid())
    ownerId     String   @map(name: "owner_id")
    createdAt   DateTime @default(now()) @map(name: "created_at")
    complete    Boolean  @default(false)
    title       String
    description String?

    @@map(name: "tasks")
}
